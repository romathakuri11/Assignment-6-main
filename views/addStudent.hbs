<header>Personal Information</header>
<form action="/students/add" method="post" class="form">
  <div class="input-box">
    <input type="text" name="firstName" placeholder="Enter first name" />
  </div>
  <div class="input-box">
    <input type="text" name="lastName" placeholder="Enter last name" />
  </div>
  <div class="column">
    <div class="input-box">
      <input type="email" name="email" placeholder="Enter your email" />
    </div>
  </div>
  <div class="input-box address">
    <input type="text" name="addressStreet" placeholder="Enter Street Address" />
    <div class="column">

      <input type="text" name="addressCity" placeholder="Enter your City" />
      <input type="text" name="addressProvince" placeholder="Enter your Province" />
    </div>
  </div>
  <div class="spacer"></div>
  <header>Academic Information</header>
  <div class="spacer"></div>
  <div class="job-box">
    <h3>Enrollment Status</h3>
    <div class="job-option">
      <div class="job">
        <input type="radio" value="Full Time" name="status" />
        <label>Full-Time</label>
      </div>
      <div class="job">
        <input type="radio" value="Part Time" name="status" />
        <label>Part-Time</label>
      </div>
    </div>
    <div class="spacer"></div>
    <h3>Teaching Assistant</h3>
    <div class="job">
      <input type="checkbox" name="TA" />
    </div>
  </div>
  <div class="spacer"></div>
  <div class="column">
      {{#if courses}}
      <select class="form-control" name="course" id="course">
        <option value="">Select Course</option>
        {{#each courses}}
        <option value="{{courseId}}">{{courseDescription}}</option>
        {{/each}}
      </select>
      {{else}}
      <div>No Courses</div>
      {{/if}}
  </div>
  <button>Submit</button>
</form>